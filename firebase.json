{
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "cleanUrls": true,
        "rewrites": [
            {
                "source": "/dashboard/admin/courses/:courseId/edit",
                "destination": "/dashboard/admin/courses/default/edit.html"
            },
            {
                "source": "/dashboard/admin/courses/:courseId/edit/:file",
                "destination": "/dashboard/admin/courses/default/edit/:file"
            },
            {
                "source": "/dashboard/courses/:courseId/learn",
                "destination": "/dashboard/courses/default/learn.html"
            },
            {
                "source": "/dashboard/courses/:courseId/learn/:file",
                "destination": "/dashboard/courses/default/learn/:file"
            },
            {
                "source": "/dashboard/courses/:courseId",
                "destination": "/dashboard/courses/default.html"
            },
            {
                "source": "/dashboard/courses/:courseId/:file",
                "destination": "/dashboard/courses/default/:file"
            }
        ]
    },
    "firestore": {
        "indexes": "firestore.indexes.json"
    }
}